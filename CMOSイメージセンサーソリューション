import numpy as np
import matplotlib.pyplot as plt
from scipy.ndimage import gaussian_filter
from skimage import color, exposure
from skimage.restoration import denoise_tv_chambolle

# ğŸ”¹ å…‰ã®å…¥åŠ›ï¼ˆãƒ¬ãƒ³ã‚ºã‚’é€šéã—ãŸå…‰ã‚’ã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³ï¼‰
image_size = (256, 256)
scene_illumination = np.random.rand(*image_size)  # å…‰ã®å…¥åŠ›

# ğŸ”¹ å…‰é›»å¤‰æ›ï¼ˆCMOS ã‚»ãƒ³ã‚µãƒ¼ãŒãƒ•ã‚©ãƒˆãƒ³ã‚’é›»åœ§ã«å¤‰æ›ï¼‰
photoelectric_signal = np.clip(scene_illumination * 255, 0, 255)

# ğŸ”¹ CMOS ã®å¢—å¹… & ãƒã‚¤ã‚ºè¿½åŠ 
gain = 3.0  # å¢—å¹…ç‡
shot_noise = np.random.poisson(photoelectric_signal)  # ã‚·ãƒ§ãƒƒãƒˆãƒã‚¤ã‚ºï¼ˆå…‰å­ãƒã‚¤ã‚ºï¼‰
read_noise = np.random.normal(0, 5, photoelectric_signal.shape)  # CMOS èª­ã¿å‡ºã—ãƒã‚¤ã‚º
amplified_signal = gain * (photoelectric_signal + shot_noise) + read_noise
amplified_signal = np.clip(amplified_signal, 0, 255)

# ğŸ”¹ A/D å¤‰æ›ï¼ˆãƒ‡ã‚¸ã‚¿ãƒ«åŒ–ï¼‰
quantized_signal = np.round(amplified_signal).astype(np.uint8)

# ğŸ”¹ ãƒ™ã‚¤ãƒ¤ãƒ¼ãƒ•ã‚£ãƒ«ã‚¿é©ç”¨
def apply_bayer_filter(img):
    bayer = np.zeros((*img.shape, 3), dtype=np.uint8)
    bayer[::2, ::2, 0] = img[::2, ::2]  # èµ¤ (R)
    bayer[::2, 1::2, 1] = img[::2, 1::2]  # ç·‘ (G)
    bayer[1::2, ::2, 1] = img[1::2, ::2]  # ç·‘ (G)
    bayer[1::2, 1::2, 2] = img[1::2, 1::2]  # é’ (B)
    return bayer

bayer_image = apply_bayer_filter(quantized_signal)

# ğŸ”¹ ç”»åƒå‡¦ç†ï¼ˆISP: ãƒ‡ãƒ¢ã‚¶ã‚¤ã‚¯ã€ãƒ›ãƒ¯ã‚¤ãƒˆãƒãƒ©ãƒ³ã‚¹ã€ãƒã‚¤ã‚ºãƒªãƒ€ã‚¯ã‚·ãƒ§ãƒ³ï¼‰
demosaic_image = np.zeros_like(bayer_image)
for i in range(3):
    demosaic_image[:, :, i] = gaussian_filter(bayer_image[:, :, i], sigma=1.5)  # ãƒ‡ãƒ¢ã‚¶ã‚¤ã‚¯è£œé–“

denoised_image = denoise_tv_chambolle(demosaic_image / 255, weight=0.08)  # ãƒã‚¤ã‚ºé™¤å»
balanced_image = denoised_image / denoised_image.max(axis=(0, 1))  # ãƒ›ãƒ¯ã‚¤ãƒˆãƒãƒ©ãƒ³ã‚¹è£œæ­£
final_image = exposure.adjust_gamma(balanced_image, gamma=1.2)  # ã‚¬ãƒ³ãƒè£œæ­£

# ğŸ”¹ ç”»åƒã®è¡¨ç¤º
plt.figure(figsize=(12, 6))

plt.subplot(2, 3, 1)
plt.title("Light Input (Scene)")
plt.imshow(scene_illumination, cmap="gray")
plt.axis("off")

plt.subplot(2, 3, 2)
plt.title("Photoelectric Conversion")
plt.imshow(photoelectric_signal, cmap="gray")
plt.axis("off")

plt.subplot(2, 3, 3)
plt.title("Amplified Signal (With Noise)")
plt.imshow(amplified_signal, cmap="gray")
plt.axis("off")

plt.subplot(2, 3, 4)
plt.title("A/D Converted Image")
plt.imshow(quantized_signal, cmap="gray")
plt.axis("off")

plt.subplot(2, 3, 5)
plt.title("Bayer Filter Applied")
plt.imshow(bayer_image)
plt.axis("off")

plt.subplot(2, 3, 6)
plt.title("Final Processed Image (ISP Output)")
plt.imshow(np.clip(final_image, 0, 1))
plt.axis("off")

plt.tight_layout()
plt.show()

# ğŸ”¹ ç”»åƒã®ä¿å­˜ï¼ˆJPEG & RAW ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆï¼‰
from skimage import io
io.imsave("final_image.jpg", (final_image * 255).astype(np.uint8))
np.save("raw_image.npy", final_image)
